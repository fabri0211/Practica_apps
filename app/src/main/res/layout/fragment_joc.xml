<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/textRonda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ronda: 1 / 5"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temps: 0s"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esperant elecció..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textVictorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu: 0 - Màquina: 0"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tria una opció:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:id="@+id/gridOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnPedra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🪨 Pedra" />

            <Button
                android:id="@+id/btnPaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📄 Paper" />

            <Button
                android:id="@+id/btnTisora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✂️ Tisora" />

            <Button
                android:id="@+id/btnLlangardaix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🦎 Llangardaix" />

            <Button
                android:id="@+id/btnSpock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🖖 Spock" />
        </GridLayout>
    </LinearLayout>
</ScrollView>
