<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.notifications.ConfiguracioFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona l'estratègia de la màquina:"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radioGroupStrategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioAleatoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aleatòria" />

            <RadioButton
                android:id="@+id/radioExploracio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exploració/Explotació" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>